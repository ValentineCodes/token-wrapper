{
  "name": "token-wrapper",
  "author": "Valentine Orga",
  "license": "MIT",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/hardhat",
      "packages/nextjs"
    ]
  },
  "scripts": {
    "account": "yarn workspace @token-wrapper/hardhat account",
    "chain": "yarn workspace @token-wrapper/hardhat chain",
    "fork": "yarn workspace @token-wrapper/hardhat fork",
    "deploy": "yarn workspace @token-wrapper/hardhat deploy",
    "verify": "yarn workspace @token-wrapper/hardhat verify",
    "compile": "yarn workspace @token-wrapper/hardhat compile",
    "clean": "yarn workspace @token-wrapper/hardhat clean",
    "generate": "yarn workspace @token-wrapper/hardhat generate",
    "hardhat:lint": "yarn workspace @token-wrapper/hardhat lint",
    "hardhat:lint-staged": "yarn workspace @token-wrapper/hardhat lint-staged",
    "test": "yarn workspace @token-wrapper/hardhat test",
    "start": "yarn workspace @token-wrapper/nextjs dev",
    "next:lint": "yarn workspace @token-wrapper/nextjs lint",
    "next:format": "yarn workspace @token-wrapper/nextjs format",
    "next:check-types": "yarn workspace @token-wrapper/nextjs check-types",
    "postinstall": "husky install",
    "precommit": "lint-staged",
    "vercel": "yarn workspace @token-wrapper/nextjs vercel",
    "vercel:yolo": "yarn workspace @token-wrapper/nextjs vercel:yolo"
  },
  "packageManager": "yarn@3.2.3",
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  }
}
